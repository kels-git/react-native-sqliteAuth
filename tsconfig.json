{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "global/*": ["global/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "global/**/*.ts",
    "global/**/*.tsx",
    "index.js",
    "App.tsx"
  ]
}
